<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="snoob.gdd.mapper.GoodsMapper">
  <resultMap id="BaseResultMap" type="snoob.gdd.model.Goods">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="goods_type_id" jdbcType="VARCHAR" property="goodsTypeId" />
    <result column="goods_type_name" jdbcType="VARCHAR" property="goodsTypeName" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="introduce" jdbcType="VARCHAR" property="introduce" />
    <result column="price" jdbcType="DOUBLE" property="price" />
    <result column="promotion_price" jdbcType="DOUBLE" property="promotionPrice" />
  </resultMap>

  <!-- 批量删除 -->
  <delete id="customDelete" parameterType="java.util.List">
    delete from goods where id in
    <foreach close=")" collection="list" index="index" item="id" open="(" separator=",">
      #{id}
    </foreach>
  </delete>
</mapper>